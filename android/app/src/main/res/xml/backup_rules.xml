<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for Android 12 and below
   This configuration ensures that app data (including WebView localStorage) 
   is backed up and can be restored when the user reinstalls the app.
   Users will see "Keep app data?" option when uninstalling.
-->
<full-backup-content>
    <!-- Include all app data by default -->
    <include domain="sharedpref" path="." />
    <include domain="database" path="." />
    <include domain="file" path="." />
    
    <!-- Include WebView data (localStorage, IndexedDB, etc.) -->
    <include domain="file" path="app_webview/" />
    
    <!-- You can exclude specific files/folders if needed -->
    <!-- Example: <exclude domain="file" path="cache/" /> -->
</full-backup-content>
