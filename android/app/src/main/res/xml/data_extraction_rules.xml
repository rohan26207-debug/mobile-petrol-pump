<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+)
   This configuration ensures that app data is included in device-to-device transfers
   and cloud backups. Users will see "Keep app data?" option when uninstalling.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all app data in cloud backups -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Include WebView data (localStorage, IndexedDB, etc.) -->
        <include domain="file" path="app_webview/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all app data in device-to-device transfers -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Include WebView data (localStorage, IndexedDB, etc.) -->
        <include domain="file" path="app_webview/" />
    </device-transfer>
</data-extraction-rules>
